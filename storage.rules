rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // --- Public Assets (Places Cache) ---
    // Explicitly allow public read for cached place photos
    match /places/{allPaths=**} {
      allow read: if true;
    }

    // --- User Profile Images ---
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // --- Website Assets ---
    match /websites/{websiteId}/{allPaths=**} {
      allow read: if true;
      // Secure Write: Verify ownership via Firestore document
      allow write: if request.auth != null && 
        firestore.get(/databases/(default)/documents/websites/$(websiteId)).data.ownerId == request.auth.uid;
    }

    // --- Restaurant Owner Images ---
    // Images uploaded by restaurant owners (claimed restaurants only)
    match /restaurants/{restaurantId}/owner-images/{imageId} {
      // Public read for all restaurant images
      allow read: if true;
      
      // Only the owner of the restaurant can upload/delete images
      // Verify ownership via Firestore document
      allow write: if request.auth != null && 
        firestore.get(/databases/(default)/documents/restaurants/$(restaurantId)).data.ownerId == request.auth.uid;
    }
  }
}
